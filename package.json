{
  "name": "figma-plugin-vite",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Ishan Sharma <ishan@flek.ai>",
  "description": "Quick start a Figma plugin using Vite",
  "repository": "git@github.com:ishan-flek-ai/figma-plugin-vite.git",
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:restartPlugin": "esno scripts/restartPlugin.ts",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite build --mode=development",
    "dev:js": "vite build --mode=development --config=vite.config.code.ts",
    "---------": "",
    "build": "cross-env NODE_ENV=production run-s clear build:*",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config=vite.config.code.ts",
    "----------": "",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx,json}\"",
    "clear": "rimraf plugin/**",
    "prepare": "husky install",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "lodash-es": "^4.17.21",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.39.1",
    "@types/chroma-js": "^2.4.0",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "chokidar": "^3.5.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-define-config": "^1.0.9",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^9.11.0",
    "esno": "0.10.0",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.2",
    "kolorist": "^1.5.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^3.20.7",
    "typescript": "^4.4.3",
    "vite": "^4.3.1",
    "vite-plugin-singlefile": "^0.13.5",
    "vue-tsc": "^1.4.2"
  }
}
